<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_movie">

    <TextView
        android:id="@+id/text_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Movie title"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/text_size_movie_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/item_start_margin"/>
    
    <ImageView
        android:id="@+id/image_movie_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="@id/text_movie_title"
        app:layout_constraintTop_toBottomOf="@id/text_movie_title"
        android:layout_marginTop="@dimen/item_general_margin"
        android:layout_marginStart="@dimen/item_start_margin"

        />


    <TextView
        android:id="@+id/text_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="April 17, 2016"
        app:layout_constraintStart_toEndOf="@id/image_movie_poster"
        app:layout_constraintTop_toTopOf="@id/image_movie_poster"
        android:layout_marginStart="@dimen/item_start_margin"
        android:layout_marginTop="@dimen/item_general_margin"
        />


    <Button
        android:id="@+id/button_show_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_overview"
        android:background="?attr/selectableItemBackground"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@id/image_movie_poster"
        app:layout_constraintTop_toBottomOf="@id/text_release_date"
        android:layout_marginStart="@dimen/item_start_margin"/>

    <TextView
        android:id="@+id/text_popularity_metric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="178"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/item_start_margin"
        app:layout_constraintTop_toBottomOf="@id/text_release_date"/>


    <TextView
        android:id="@+id/text_movie_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        tools:text="@string/demo_text_description"
        app:layout_constraintTop_toBottomOf="@id/image_movie_poster"
        android:padding="20dp"
        android:visibility="gone"
        tools:visibility="visible"/>



</android.support.constraint.ConstraintLayout>